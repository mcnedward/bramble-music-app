<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <SeekBar
        android:id="@+id/now_playing_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/WhiteTransparent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/album_song_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/now_playing_passed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/no_duration"/>

            <TextView
                android:id="@+id/now_playing_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/no_duration"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/btn_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="0.15"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:src="@drawable/icon_back"/>

                <ImageView
                    android:id="@+id/btn_play"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="0.15"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:src="@drawable/icon_play"/>

                <ImageView
                    android:id="@+id/btn_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="0.15"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:src="@drawable/icon_forward"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/btn_loop"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:src="@drawable/icon_loop"/>

                <ImageView
                    android:id="@+id/btn_shuffle"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:src="@drawable/icon_shuffle"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>