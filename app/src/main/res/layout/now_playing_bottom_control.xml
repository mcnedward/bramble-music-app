<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/now_playing_bottom_control"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_top"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/now_playing_bottom_album_art"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitCenter"
        android:src="@drawable/no_album_art"/>

    <TextView
        android:id="@+id/song_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toLeftOf="@+id/now_playing_bottom_play"
        android:layout_toRightOf="@id/now_playing_bottom_album_art"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="15dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="SONG TITLE HERE"/>

    <ImageView
        android:id="@+id/now_playing_bottom_play"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_play"/>
</RelativeLayout>